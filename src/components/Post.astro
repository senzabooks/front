---
import PostContent from "../components/PostContent.jsx";

const { post } = Astro.props;

const dateText = (() => {
  if (post.postType === "about") return null;

  const d = new Date(post.postDate);

  if (post.postType === "work") {
    return String(d.getFullYear());
  }

  return d.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
})();
---

<div class="post-container">
  {
    post.postType != "about" && (
      <div class="title-bar">
        <h2>{post.title}</h2>
        {dateText && <p>{dateText}</p>}
      </div>
    )
  }

  <div class="post-content">
    <div class="post-body">
      <PostContent post={post} client:load />
    </div>
  </div>
</div>

<style lang="scss">
  .post-content {
    width: 100%;
    position: relative;
  }

  /* page wrapper */
  :global(.post-container) {
    padding-top: var(--pt);
    min-height: 100vh;
  }

  :global(.title-bar) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  /* -------------------------------
   TYPOGRAPHY BASIS
-------------------------------- */
  :global(.post-content p) {
    white-space: pre-wrap;
    min-height: 16px;
  }

  :global(.post-content strong) {
    font-weight: normal;
    font-size: 32px;
  }

  :global(.post-content blockquote) {
    font-weight: normal;
    // width: 100%;
    display: block;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: calc(var(--lh) / 2);
    margin-bottom: calc(var(--lh) / 2);
    padding: 40px 40px 40px 40px;
  }

  /* PortableText blocks (your "paragraphs") */
  :global(.post-content .pt-block) {
    margin: 0 0 calc(var(--lh) / 2);
    white-space: pre-wrap;
  }

  /* -------------------------------
    IMAGE + CAROUSEL SPACING FIX
-------------------------------- */

  /* never apply spacing to img */
  :global(.post-content img) {
    width: 100%;
    border-radius: var(--br);
    margin: 0 !important;
    padding: 0 !important;
    display: block;
  }

  /* main image wrapper (figure) */
  :global(.post-content figure.pt-image) {
    margin: 40px auto !important;
    cursor: zoom-in;
  }

  :global(.post-content figure.pt-image) {
  margin: 40px auto !important;
  cursor: zoom-in;
}

/* no margin on footnote */
:global(.post-content .footnote-layer--right figure.pt-image),
:global(.post-content .footnote-layer--left figure.pt-image),
:global(.post-content .margin-note figure.pt-image),
:global(.post-content .inline-footnote figure.pt-image) {
  margin:10px 0 10px 0 !important;
  cursor: default;
}

  /* carousel wrapper controls spacing (includes caption) */
  :global(.post-content .pt-carousel-wrap) {
    margin: 40px 0;
  }

  /* carousel box does not add spacing */
  :global(.post-content .pt-carousel) {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: var(--br);
    overflow: hidden;
    cursor: e-resize;
    margin: 0 !important;
  }

  /* remove double gap when media follows media */
  :global(.post-content figure.pt-image + figure.pt-image) {
    margin-top: 0 !important;
  }
  :global(.post-content .pt-carousel-wrap + .pt-carousel-wrap) {
    margin-top: 0 !important;
  }
  :global(.post-content figure.pt-image + .pt-carousel-wrap),
  :global(.post-content .pt-carousel-wrap + figure.pt-image) {
    margin-top: 0 !important;
  }

  /* caption under images and carousels */
  :global(.post-content .pt-caption) {
    display: block;
    width: 100%;
    text-align: center;
    margin-top: 6px;
    font-size: calc(var(--fz) * 0.6);
  }

  /* -------------------------------
    CAROUSEL IMAGES
-------------------------------- */
  :global(.post-content .pt-carousel-img) {
    position: absolute;
    inset: 0;
    opacity: 0;
    border-radius: var(--br);
    transition: opacity 1s ease-in-out;
    will-change: opacity;
  }

  :global(.post-content .pt-carousel-img.is-visible) {
    opacity: 1;
  }

  /* horizontal fill */
  :global(.post-content .pt-carousel-img.fit-cover) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* vertical contain */
  :global(.post-content .pt-carousel-img.fit-contain) {
    width: auto;
    height: 100%;
    max-width: 100%;
    object-fit: contain;
    left: 50%;
    top: 50%;
    right: auto;
    bottom: auto;
    transform: translate(-50%, -50%);
  }

  /* -------------------------------
   FOOTNOTES
-------------------------------- */
  :global(.post-content .footnote-text) {
    color: var(--footnote-gray);
    cursor: pointer;
  }

  :global(.post-content .footnote-note) {
    display: none;
  }

  :global(.post-content .fn-inline-block) {
    padding: 0 2px;
  }

  /* desktop margin-note columns */
  :global(.post-content .footnote-layer--right),
  :global(.post-content .footnote-layer--left) {
    position: absolute;
    top: 5px;
    width: calc((100vw - var(--column-width)) / 2 - 26px);
    pointer-events: none;
    z-index: 10;
  }

  :global(.post-content .footnote-layer--right) {
    left: 100%;
    margin-left: 13px;
    text-align: left;
  }

  :global(.post-content .footnote-layer--left) {
    right: 100%;
    margin-right: 13px;
    text-align: right;
  }

  :global(.post-content .margin-note) {
    position: absolute;
    color: var(--footnote-gray);
    display: none;
    pointer-events: none;
    max-width: 350px;
  }

  :global(.post-content .margin-note--right) {
    left: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--left) {
    right: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--visible) {
    display: block;
  }

  /* -------------------------------
   LIGHTBOX
-------------------------------- */
  :global(html.pt-no-scroll),
  :global(body.pt-no-scroll) {
    overflow: hidden;
  }

  :global(.pt-lightbox) {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    place-items: center;
  }

  :global(.pt-lightbox.is-open) {
    display: grid;
  }

  :global(.pt-lightbox__backdrop) {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  :global(.pt-lightbox__content) {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    max-width: 90vw;
    max-height: 90vh;
  }

  :global(.pt-lightbox__img) {
    position: relative;
    z-index: 1;
    border-radius: var(--br);
    max-width: 80vw;
    max-height: 80vh;
    width: auto;
    height: auto;
    object-fit: contain;
    cursor: zoom-out;
  }

  :global(.pt-lightbox__img.is-horizontal) {
    max-width: 90vw;
    max-height: 90vh;
  }

  :global(.pt-lightbox__img.is-vertical) {
    max-height: 90vh;
    max-width: 90vw;
  }

  :global(.pt-lightbox__caption) {
    max-width: 90vw;
    text-align: center;
    font-size: calc(var(--fz) * 0.6);
    display: none;
  }

  /* -------------------------------
    MOBILE
-------------------------------- */
  @media (max-width: 768px) {
    :global(.post-content .footnote-layer--right),
    :global(.post-content .footnote-layer--left),
    :global(.post-content .margin-note) {
      display: none !important;
    }

    :global(.post-content .inline-footnote) {
      display: block;
      margin-top: calc(var(--lh) / 2);
      margin-bottom: calc(var(--lh) / 2);
      padding: 8px;
      color: var(--footnote-gray);
      border-radius: var(--br);
      margin-left: 5%;
    }

    :global(.post-content img) {
      cursor: default !important;
    }
  }
</style>